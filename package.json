{
    "name": "my-bot",
    "version": "1.0.0",
    "author": "Kevin Novak",
    "description": "A TypeScript Discord bot with multi-machine sharding and bot-site support.",
    "license": "MIT",
    "private": true,
    "engines": {
        "node": ">=12.14.0"
    },
    "main": "dist/start.js",
    "scripts": {
        "start": "tsc && node dist/start.js",
        "start-shard": "tsc && node dist/app.js",
        "start-pm2": "tsc && pm2 start process.json",
        "stop-pm2": "pm2 stop process.json",
        "delete-pm2": "pm2 delete process.json",
        "build": "tsc"
    },
    "dependencies": {
        "discord.js": "12.3.1",
        "node-fetch": "2.6.0",
        "pm2": "^4.4.1"
    },
    "devDependencies": {
        "@types/node": "14.6.0",
        "@types/node-fetch": "2.5.7",
        "tslint": "^6.1.3",
        "typescript": "^3.9.7"
    }
}
